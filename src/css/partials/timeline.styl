.timeline
  position: absolute
  z-index: 100
  width: auto
  height: 60px
  bottom: 0
  left: 0
  will-change: transform
  transition: transform .65s ease
  pointer-events: none

  &-hide
    transition: transform .65s ease
    transform: translateY(0)
    will-change: transform
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    pointer-events: auto
    &::before
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: linear-gradient(180deg, RGBA(20, 20, 20, .00), RGBA(20, 20, 20, 1.00))

  &--part
    width: 100vw
    height: 60px
    position: relative

  &--chapter
    position: absolute
    width: 100px
    height: 80px
    bottom: 0
    pointer-events: auto
    font-size: 11pt
    text-align: center
    &.hide
      display: none
    &-name
      display: block
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 30px
      line-height: 30px
      font-family: 'Raleway', sans-serif
      font-weight: 800
      text-transform: uppercase
    &::after
      position: absolute
      width: 2px
      height: 40px
      background: $white
      bottom: 10px
    &.chapter-next
      right: 15px
    &.chapter-prev
      left: 15px
    &--current
      position: absolute
      bottom: 0
      height: 80px
      width: 100% 
      font-size: 12px
      text-align: center
      &-name
        height: 30px
        line-height: 30px
    
  &--container
    top: 0
    left: 0
    width: calc(100vw - 140px)
    height: 60px
    margin: 0 auto

    display: flex
    flex-direction: row
    justify-content: center
    align-items: center

    &--seek-bar
      position: absolute
      width: 100vw
      height: 2px
      background: rgba(255,255,255,.2)
      pointer-events: none
      &-fill
        background:rgba(255,255,255,.7)
        width: 100%
        height: 100%
        transform-origin: 0 50%
        transition: transform .35s ease
        will-change: transform
        transform: scaleX(.2)

    &--pin
      width: 10px
      height: 10px
      background: $white
      border-radius: 50%
      margin: auto
      display: flex
      flex-direction: row
      justify-content: center
      align-items: center
      cursor: pointer
      pointer-events: auto
      position: relative
      z-index: 100
      &::before
        position: absolute
        z-index: -10
        width: 100%
        height: 100%
        border-radius: 50%
        transform: scale(1)
        background: $white
        transition: all .3s ease
        opacity: 0.2
      &.active, &:hover
        opacity: 1
        transform: scale(1)
        &::before
          transform: scale(2.5)
        