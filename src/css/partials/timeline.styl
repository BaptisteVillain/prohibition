.timeline
  position: absolute
  width: auto
  height: 60px
  bottom: 0
  left: 0
  transition: transform .4s ease
  will-change: transform
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  transition: transform .65s ease
  pointer-events: auto

  &--part
    width: 100vw
    height: 60px
    position: relative

  &--chapter
    position: absolute
    width: 100px
    height: 80px
    bottom: 0
    pointer-events: auto
    font-size: 12px
    text-align: center
    &.hide
      display: none
    &-name
      display: block
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 30px
      line-height: 30px
    &::after
      position: absolute
      width: 2px
      height: 40px
      background: $white
      bottom: 10px
    &.chapter-next
      right: 15px
    &.chapter-prev
      left: 15px
    &--current
      position: absolute
      bottom: 0
      height: 80px
      width: 100% 
      font-size: 12px
      text-align: center
      &-name
        height: 30px
        line-height: 30px
    
  &--container
    top: 0
    left: 0
    width: calc(100vw - 140px)
    height: 60px
    margin: 0 auto

    display: flex
    flex-direction: row
    justify-content: center
    align-items: center

    &--seek-bar
      position: absolute
      width: 100vw
      height: 2px
      background: rgba(255,255,255,.2)
      &-fill
        background:rgba(255,255,255,.3)
        width: 100%
        height: 100%
        transform-origin: 0 50%
        transform: scaleX(.8)

    &--pin
      width: 10px
      height: 10px
      background: $white
      border-radius: 50%
      margin: auto
      display: flex
      flex-direction: row
      justify-content: center
      align-items: center
      cursor: pointer
      pointer-events: auto
      &.active, &:hover
        .timeline--container--pin-name
          opacity: 0.5
          transform: scale(1)
      &-name  
        display: block
        margin: auto
        flex-shrink: 0
        width: auto
        height: 20px
        margin-top: -30px
        opacity: 0
        transform: scale(0)
        transition: all .45s ease
        will-change: transform, opacity
        