body,html
  width: 100vw
  height: 100vh
  overflow: hidden

*, *::after, *::before
  box-sizing: border-box

*::after, *::before
  content: ""

.container
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  transition: transform .65s ease-in-out
  will-change: transform
  &--section
    width: 100vw
    height: 100vh
    background: tomato
    flex-shrink: 0
  &--story
    width: auto
    height: 100vh
    display: flex
    flex-direction: column
    background: red
    transition: transform .65s ease-in-out    
    &.scrolled
      transform: translateY(-100vh)
    &--row
      width: auto
      display: flex
      flex-direction: row
      flex-shrink: 0      
    &--section
      flex-shrink: 0
      width: 100vw
      height: 100vh
      background: tomato
      flex-shrink: 0

.fixed
  position: fixed
  top: 50px
  left: 50px
  a
    display: block