.section-2-3
  video
    background $black
    position absolute
    top 0
    left 0
    top 50% 
    left 50%
    transform translateX(-50%) translateY(-50%)
    min-width 100vw 
    min-height 100vh 
    width auto 
    height auto
    overflow hidden
      
  .video-skip
    display: block
    position: absolute
    z-index: 100
    right: 30px
    top: 30px
    width: 60px
    height: 30px
    line-height: 16px
    border: 1px solid $white
    font-size: 16px
    transition: all 0.45s ease
    color: $white
    border-radius: 2px
    &::before
      position: absolute
      z-index: -1
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: $white
      transform-origin: 0 50%
      transform: scaleX(0)
      transition: all 0.45s ease      
    &:hover
      color: $black
      &::before
        transform: scaleX(1)
    &.hide
      transform: translateY(-100px)
      pointer-events: none