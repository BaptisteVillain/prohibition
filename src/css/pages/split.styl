.container--section-split
  display: flex
  flex-direction: row
  flex-wrap: nowrap
  text-align: center
  color: $white
  &--part
    width: 50vw
    height: 100vh
    position: relative
    z-index: 10
    transition: all .45s ease
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    flex-shrink: 0
    &:nth-child(2n)
      &::before
        background url("../img/gentil_side.jpg") no-repeat
    &::before,
    &::after      
      z-index -1
      position absolute
      top 0px
      left 0px
      width 50vw
      height 100vh
      transition: all .75s ease
    &::before
      background url("../img/mafia_side.jpg") no-repeat
      background-size cover
      background-position 0 20%
    &::after
      background rgba(0, 0, 0, 0.9)
      border: 1px solid transparent      
    &:hover
      border-color: $yellow 
      &:nth-child(2n)
        &::after
          border-color: $green
      &::after
        background rgba(0, 0, 0, 0.7)
        border-color: $yellow
    
    .title
      width: auto
      height: 55px
      line-height: 55px
      font-size: 34pt
      font-weight: bolder
      text-transform: uppercase
      margin: 30px 0

    .next
      font-weight 600
      margin: 30px 0
      font-size 12pt
      border 1px solid $white
      border-radius: 2px
      padding 10px 30px
      position: relative
      z-index: 10
      transition: all .45s ease
      &:hover
        color: $black
        &::before
          transform: scaleX(1)
      &::before
        position: absolute
        z-index: -1
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: $white
        transform-origin: 0 50%
        transform: scaleX(0)
        transition: all 0.45s ease

    .description
      font-size 12pt
      font-weight lighter
      letter-spacing 1pt
      margin-top 0
      color rgba(255, 255, 255, .8)

&.civil
  .next
    border-color: $green
    &::before
        background: $green

&.mafia
  .next
    border-color: $yellow
    &::before
      background: $yellow  
