.container--section-landing
  position relative
  text-align center
  &::before,
  &::after
    z-index -1
    position absolute
    top 0
    left 0
    width 100%
    height 100%
  &::before
    background url("../img/Ã©cran_titre.jpg") no-repeat
    background-size cover
    background-position 0 20%
  &::after
    background rgba(0, 0, 0, 0.7)
  .title
    font-weight 800
    font-family Raleway
    font-size 72pt
    margin-top 35vh
    margin-bottom 0
  .description
    font-size 16pt
    font-weight lighter
    letter-spacing 1pt
    margin-top 0
    color rgba(255, 255, 255, .8)
  .next
    font-weight 600
    margin-top 20px
    font-size 12pt
    border 2px solid $white
    padding 10px 30px
    position: relative
    z-index: 10
    transition: all .45s ease
    &:hover
      color: $black
      &::before
        transform: scaleX(1)
    &::before
      position: absolute
      z-index: -1
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: $white
      transform-origin: 0 50%
      transform: scaleX(0)
      transition: all 0.45s ease