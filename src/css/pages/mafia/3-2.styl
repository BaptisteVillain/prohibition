.container--story--row-mafia
  .section-3-2
    display: flex
    flex-direction: row
    .next
      z-index: 1000
    .section-mafia-part
      width: calc(100vw / 3)
      position: relative
      z-index: 100
      color: $white
      height: 100vh
      background-size: cover
      padding: 60px
      display: flex
      flex-direction: column
      justify-content: center
      align-items: center
      .animate
        animation: fade_in 1s ease-in-out forwards
        opacity: 0        
      &:nth-child(2)
        background-image: url('../img/section-3-2-1.jpg')
        background-position: 50%
        .animate
          animation-delay: 1s
      &:nth-child(3)
        background-image: url('../img/section-3-2-2.jpg')
        background-position: 30%
        .animate
          animation-delay: 1.3s
      &:nth-child(4)
        background-image: url('../img/section-3-2-3.jpg')
        .animate
          animation-delay: 1.6s        
      &::before
        position: absolute
        z-index: -1
        top: 0
        left: 0
        width: 100%
        height: 100%
        background: rgba(0,0,0,.6)
      .subtitle
        width: 100%
        font-family: 'Raleway', sans-serif
        font-weight: 800
        text-transform: uppercase
        color: $yellow
      p
        line-height: 1.7

@keyframes fade_in
  from
    opacity: 0
    transform: translateY(200px)
  to
    opacity: 1
    transform: translateY(0)