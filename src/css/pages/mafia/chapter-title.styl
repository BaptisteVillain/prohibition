.section-title
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  &::before
    background: url('../img/title-1.jpg') no-repeat
    background-size: cover

  .chapter-number
    position: absolute
    top: 30px
    left: 30px
    font-family: 'Raleway', sans-serif
    font-weight: 800
    font-size: 18px
    text-transform: uppercase

  .title
    width: 100vw
    text-align: center
    margin-bottom: 20px
  .subtitle
    color: $green
    font-weight: lighter
    margin-top: 0

.story-button
  &::after
    color $green
  &:hover
    &::after
      color $black

.container--story--row-mafia
  .section-title
    .subtitle
      color: $yellow

  .story-button
    &::after
      color $yellow
    &:hover
      &::after
        color $black